{
  "name": "system",
  "description": "Maintenance for System Nodes Command.",
  "sub_commands": [
    {
      "name": "stop",
      "description": "Stop Running Nodes/Cluster",
      "need_confirmation": true,
      "permissions_tag": "update",
      "args": [
        {
          "flag": "resource_name",
          "help": "Node ID for Stopping the Node.",
          "type": "str",
          "json": true
        },
        {
          "flag": "args",
          "default": [],
          "suppress_help": true,
          "nargs": "?",
          "help": ""
        }
      ],
      "comm": {
        "type": "rest",
        "method": "post",
        "target": "/{version}/maintenance/cluster/stop",
        "version": "v1"
      }
    },
    {
      "name": "shutdown",
      "description": "Shutdown Running Node.",
      "need_confirmation": true,
      "permissions_tag": "update",
      "args": [
        {
          "flag": "resource_name",
          "help": "Provide Node ID for shutting down the Resource.",
          "type": "str",
          "json": true
        },
        {
          "flag": "args",
          "default": [],
          "suppress_help": true,
          "nargs": "?",
          "help": ""
        }
      ],
      "comm": {
        "type": "direct",
        "target": "csm.cli.scripts",
        "method": "shutdown",
        "class": "System",
        "is_static": true
      }
    },
    {
      "name": "start",
      "description": "Initialize a Non Running Node",
      "need_confirmation": true,
      "permissions_tag": "update",
      "args": [
        {
          "flag": "resource_name",
          "help": "Node Name",
          "type": "str",
          "json": true
        },
        {
          "flag": "args",
          "default": [],
          "suppress_help": true,
          "nargs": "?",
          "help": ""
        }
      ],
      "comm": {
        "type": "rest",
        "method": "post",
        "target": "/{version}/maintenance/cluster/start",
        "version": "v1"
      }
    },
    {
      "name": "status",
      "description": "Check Status of All Nodes.",
      "need_confirmation": false,
      "permissions_tag": "list",
      "args": [
        {
          "flag": "args",
          "default": [],
          "suppress_help": true,
          "nargs": "?",
          "help": ""
        },
        {
          "flag": "-f",
          "dest": "format",
          "help": "Format of Output",
          "default": "table",
          "type": "str",
          "suppress_help": true,
          "choices": [
            "table",
            "xml",
            "json"
          ]
        }
      ],
      "comm": {
        "type": "rest",
        "method": "get",
        "target": "/{version}/maintenance/cluster/node_status",
        "version": "v1"
      },
      "output": {
        "table": {
          "headers": {
            "name": "Node ID",
            "online": "Online",
            "standby": "Stand-By Status",
            "shutdown": "Shutdown Status"
          },
          "filters": "node_status"
        }
      }
    },
    {
      "name": "startup",
      "description": "Brings back the system after cluster has be started to original state.",
      "need_confirmation": true,
      "permissions_tag": "startup",
      "args": [
        {
          "flag": "args",
          "default": [],
          "suppress_help": true,
          "nargs": "?",
          "help": ""
        }
      ],
      "comm": {
        "type": "direct",
        "target": "csm.cli.scripts",
        "method": "unmaintenance",
        "class": "System",
        "is_static": true
      }
    }
  ]
}